<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete A user</title>
    <style>
      * {
        margin: 0;
        padding: 0;
      }

      /* Add a black background color to the top navigation */
      .topnav {
        background-color: #333;
        overflow: hidden;
      }

      /* Style the links inside the navigation bar */
      .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }

      /* Change the color of links on hover */
      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }

      /* Add a color to the active/current link */
      .topnav a.active {
        background-color: #04aa6d;
        color: white;
      }

      .form-add-new {
        width: 500px;
        margin: 0 auto;
        padding-top: 100px;
      }

      .input-group {
        padding: 10px;
      }

      button {
        margin: 10px;
        cursor: pointer;
      }
      .d-none {
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="topnav">
      <a href="/api/v1/product/list">Home</a>
      <a href="/create">Create Product</a>
    </div>

    <div class="form-add-new">
      <form action="/delete-product" method="post">
        <fieldset>
          <legend>Delete a users</legend>

          <div class="input-group d-none">
            <label for="">Id: </label>
            <input
              type="text"
              name="productId"
              value="<%= productDelete.id %>"
            />
          </div>

          <div class="input-group">
            <label for=""
              >Are you sure to delete this product with name:
            </label>
            <input
              type="text"
              name="nameProduct"
              value="<%= productDelete.nameProduct %>"
            />
          </div>
          <button>Confirm</button>
        </fieldset>
      </form>
    </div>
  </body>
</html>
